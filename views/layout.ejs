    <head>
        <title>
            <%= title  %>
        </title>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/footer.css">
        <link rel="stylesheet" href="/css/header.css"> <!--  we will not use scss as converted css files will be accessed here  -->
        
        <%- style %>
        
